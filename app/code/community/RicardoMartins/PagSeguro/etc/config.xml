<?xml version="1.0"?>
<config>
    <modules>
        <RicardoMartins_PagSeguro>
            <version>3.7.11</version>
        </RicardoMartins_PagSeguro>
    </modules>
    <global>
        <models>
            <ricardomartins_pagseguro>
                <class>RicardoMartins_PagSeguro_Model</class>
                <resourceModel>ricardomartins_pagseguro_resource</resourceModel>
            </ricardomartins_pagseguro>
            <ricardomartins_pagseguro_resource>
                <class>RicardoMartins_PagSeguro_Model_Resource</class>
                <entities>
                    <kiosk>
                        <table>ricardomartins_pagseguro_kiosk</table>
                    </kiosk>
                </entities>
            </ricardomartins_pagseguro_resource>
        </models>
        <blocks>
            <ricardomartins_pagseguro>
                <class>RicardoMartins_PagSeguro_Block</class>
            </ricardomartins_pagseguro>
        </blocks>
        <helpers>
            <ricardomartins_pagseguro>
                <class>RicardoMartins_PagSeguro_Helper</class>
            </ricardomartins_pagseguro>
        </helpers>
        <resources>
            <ricardomartins_pagseguro_setup>
                <setup>
                    <module>RicardoMartins_PagSeguro</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </ricardomartins_pagseguro_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <ricardomartins_pagseguro>
                <use>standard</use>
                <args>
                    <module>RicardoMartins_PagSeguro</module>
                    <frontName>pseguro</frontName>
                </args>
            </ricardomartins_pagseguro>
        </routers>
        <translate>
            <modules>
                <ricardomartins_pagseguro>
                    <files>
                        <default>RicardoMartins_PagSeguro.csv</default>
                    </files>
                </ricardomartins_pagseguro>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <pagseguro>
                        <class>ricardomartins_pagseguro/observer</class>
                        <method>addDirectPaymentBlock</method>
                    </pagseguro>
                </observers>
            </core_block_abstract_to_html_after>
            <ricardomartins_pagseguro_kioskorder_notification_received>
                <observers>
                    <kiosk_notification>
                        <class>ricardomartins_pagseguro/kiosk</class>
                        <method>createOrderFromNotification</method>
                    </kiosk_notification>
                </observers>
            </ricardomartins_pagseguro_kioskorder_notification_received>
        </events>
        <layout>
            <updates>
                <ricardomartins_pagseguro>
                    <file>ricardomartins_pagseguro.xml</file>
                </ricardomartins_pagseguro>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <ricardomartins_pagseguro>
                    <file>ricardomartins_pagseguro/pagseguro.xml</file>
                </ricardomartins_pagseguro>
            </updates>
        </layout>
        <events>
            <admin_session_user_login_success>
                <observers>
                    <ricardomartins_pagseguro_healthcheck>
                        <type>singleton</type>
                        <class>ricardomartins_pagseguro/healthcheck</class>
                        <method>basicCheck</method>
                    </ricardomartins_pagseguro_healthcheck>
                </observers>
            </admin_session_user_login_success>
            <admin_system_config_changed_section_payment>
                <observers>
                    <ricardomartins_pagseguro_healthcheck>
                        <type>singleton</type>
                        <class>ricardomartins_pagseguro/healthcheck</class>
                        <method>check</method>
                    </ricardomartins_pagseguro_healthcheck>
                </observers>
            </admin_system_config_changed_section_payment>
    </events>
    </adminhtml>
    <default>
        <payment>
            <pagseguro_cc>
                <model>ricardomartins_pagseguro/payment_ccview</model>
                <title>Cartão de Crédito - via PagSeguro UOL (antigo)</title>
            </pagseguro_cc>
            <rm_pagseguro_cc>
                <active>0</active>
                <title>Cartão de Crédito - via PagSeguro UOL</title>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <flag>42x20</flag>
                <payment_action>order</payment_action>
                <model>ricardomartins_pagseguro/payment_cc</model>
                <allowspecific>0</allowspecific>
                <send_neworder_email>0</send_neworder_email>
                <!--<specificcountry>BR</specificcountry>-->
                <group_restriction>0</group_restriction>
                <info_brl>1</info_brl>
                <total_installments>0</total_installments>
                <force_installments_selection>0</force_installments_selection>
                <installments_product>0</installments_product>
            </rm_pagseguro_cc>
            <rm_pagseguro>
                <customer_cpf_attribute>taxvat</customer_cpf_attribute>
                <address_telephone_attribute>telephone</address_telephone_attribute>
                <address_street_attribute>street_1</address_street_attribute>
                <address_number_attribute>street_2</address_number_attribute>
                <address_neighborhood_attribute>street_2</address_neighborhood_attribute>
                <ws_url>https://ws.pagseguro.uol.com.br/v2/</ws_url>
                <ws_url_app>https://ws.ricardomartins.net.br/pspro/v6/wspagseguro/v2/</ws_url_app>
                <!--<ws_url_app>http://ws.local.com.br/pspro/v6/wspagseguro/v2/</ws_url_app>-->
                <js_url>https://stc.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.directpayment.js</js_url>
                <sandbox_ws_url>https://ws.sandbox.pagseguro.uol.com.br/v2/</sandbox_ws_url>
                <sandbox_ws_url_app>https://ws.ricardomartins.net.br/pspro/v6/wspagseguro/sandbox/v2/</sandbox_ws_url_app>
                <!--<sandbox_ws_url_app>http://ws.local.com.br/pspro/v6/wspagseguro/sandbox/v2/</sandbox_ws_url_app>-->
                <sandbox_js_url>https://stc.sandbox.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.directpayment.js</sandbox_js_url>
                <exception_request_validate>onestepcheckout/ajax/savePaymentMethod</exception_request_validate>
            </rm_pagseguro>
            <rm_pagseguro_kiosk>
                <active>0</active>
                <title>Pagamento avulso - via PagSeguro UOL</title>
                <order_status>pending</order_status>
                <model>ricardomartins_pagseguro/payment_kiosk</model>
                <allowspecific>0</allowspecific>
                <send_neworder_email>1</send_neworder_email>
            </rm_pagseguro_kiosk>
        </payment>
    </default>
    <phpunit>
        <suite>
            <modules>
                <RicardoMartins_PagSeguro/>
            </modules>
        </suite>
    </phpunit>
</config>
